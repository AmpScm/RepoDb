<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Title>RepoDb.MySql</Title>
    <TargetFrameworks>net10.0;net9.0;net8.0;netstandard2.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Description>A hybrid .NET ORM library for MySQL (using MySql.Data).</Description>
    <PackageTags>orm hybrid-orm micro-orm mysql</PackageTags>
    <PackageReleaseNotes>https://repodb.net/release/mysql</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/AmpScm/RepoDB/tree/master/src/RepoDb.MySql/</PackageProjectUrl>
    <PackageId>$(PackagePrefix)$(AssemblyName)</PackageId>
    <DefineConstants>$(DefineConstants);MYSQLPLAIN</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MySql.Data" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\RepoDb.MySqlConnector\StatementBuilders\MySqlConnectorStatementBuilder.cs">
      <Link>StatementBuilders\MySqlStatementBuilder.cs</Link>
    </Compile>
    <Compile Include="..\RepoDb.MySqlConnector\DbHelpers\MySqlConnectorDbHelper.cs">
      <Link>DbHelpers\MySqlDbHelper.cs</Link>
    </Compile>
    <Compile Include="..\RepoDb\Compat.cs" />
    <None Include="README.md" Pack="True" PackagePath="\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\RepoDb\RepoDb.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="StatementBuilders\" />
  </ItemGroup>
</Project>
